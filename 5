import yfinance as yf
import matplotlib.pyplot as plt

def make_graph(data, title):
    plt.figure(figsize=(10, 6))
    plt.plot(data.index, data['Adj Close'], label='Adjusted Close Price', color='blue')
    plt.xlabel('Date')
    plt.ylabel('Price ($)')
    plt.title(title)
    plt.legend()
    plt.grid(True)
    plt.show()

tesla_data = yf.download("TSLA", start="2023-01-01", end="2024-01-01")

make_graph(tesla_data, 'Tesla Stock Price (2023-2024)')
